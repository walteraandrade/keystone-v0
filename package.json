{
  "name": "keystone-audit-ingestion",
  "version": "0.1.0",
  "description": "Audit knowledge ingestion service with graph DB",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "test": "bun test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate": "bun src/services/graph/migrations/run.ts",
    "validate:phase1": "bun run scripts/validate/phase1-domain.ts",
    "validate:phase2": "bun run scripts/validate/phase2-service.ts",
    "validate:phase3": "bun run scripts/validate/phase3-sqlite.ts",
    "validate:phase4": "bun run scripts/validate/phase4-cleanup.ts",
    "validate:phase5": "bun run scripts/validate/phase5-coverage.ts",
    "validate:phase6": "bun run scripts/validate/phase6-docs.ts",
    "validate:all": "bun run validate:phase1 && bun run validate:phase2 && bun run validate:phase3 && bun run validate:phase4 && bun run validate:phase5 && bun run validate:phase6"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.9.0",
    "@fastify/multipart": "8.0.0",
    "@qdrant/js-client-rest": "1.7.0",
    "dotenv": "16.3.0",
    "fastify": "4.25.0",
    "neo4j-driver": "5.15.0",
    "openai": "4.20.0",
    "pdf-parse": "1.1.1",
    "pino": "8.16.0",
    "tiktoken": "1.0.10",
    "uuid": "9.0.1",
    "xlsx": "0.18.5",
    "zod": "3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "20.10.0",
    "@types/pdf-parse": "1.1.4",
    "@types/uuid": "9.0.7",
    "pino-pretty": "10.2.0",
    "typescript": "5.9.3"
  }
}
